{
  "env": {
    "browser": true,
    "mocha": true,
    "node": true
  },
  "parser": "babel-eslint",
  "rules": {
    "valid-jsdoc": 2,
    "comma-dangle": 0,
    "prefer-template": 0,
    "arrow-body-style": 0,

    // Disable until Flow supports let and const
    "no-var": 0,
    "vars-on-top": 0,

    // Temporarily disabled for test/* until babel/babel-eslint#33 is resolved
    "padded-blocks": 0,

    "strict": 0,
    "no-unused-vars": 0,
    "no-param-reassign": 1,
    "no-empty-function": 1,
  }
}
